// src/components/AppliedMathematicsComments.astro
---
<section class="comments">
  <h2>Comments</h2>
  <div class="giscus"></div>
</section>
<script>
  // Create and load the script programmatically to avoid any MDX/Astro processing issues
  const script = document.createElement('script');
  script.src = "https://giscus.app/client.js";
  script.setAttribute("data-repo", "SiliconWit/applied-mathematics");
  script.setAttribute("data-repo-id", "R_kgDOJuYJkg");
  script.setAttribute("data-category", "Announcements");
  script.setAttribute("data-category-id", "DIC_kwDOJuYJks4Cnbec");
  script.setAttribute("data-mapping", "pathname");
  script.setAttribute("data-strict", "0");
  script.setAttribute("data-reactions-enabled", "1");
  script.setAttribute("data-emit-metadata", "0");
  script.setAttribute("data-input-position", "bottom");
  script.setAttribute("data-theme", "preferred_color_scheme");
  script.setAttribute("data-lang", "en");
  script.setAttribute("crossorigin", "anonymous");
  script.async = true;
  
  // Add to the document after the page loads
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelector('.giscus').parentNode.appendChild(script);
    console.log("Giscus script loaded dynamically");
  });
</script>
